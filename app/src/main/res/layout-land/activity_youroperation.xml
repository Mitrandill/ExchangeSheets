<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spreadsheet.exchangebook.Youroperation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/youroperation_to_value_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.16"
            android:gravity="right"
            android:text="@string/currency"
            android:textSize="22sp" />

        <!--
           android:id="@+id/textView6"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="     Покупка"
           android:textSize="18sp" />
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.12"
            android:text="@string/Date"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/youroperation_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="11.11.16"
            android:textAlignment="viewEnd"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/currency"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/youroperation_from_value"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="1234578.6"
            android:textAlignment="viewEnd"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/youroperation_from_value_currency"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:gravity="right"
            android:text="@string/currency"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/UAH"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/youroperation_to_UAH"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="12345678.6"
            android:textAlignment="viewEnd"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="175dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/COURSE"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/youroperation_curse"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="12345.6"
            android:textAlignment="viewEnd"
            android:textSize="22sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="@string/Comment1"
            android:textSize="22sp" />


    </LinearLayout>

    <Button
        android:id="@+id/youroperation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="@string/Back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/youroperation_to_value_comment"
            android:layout_width="833dp"
            android:layout_height="80dp"
            android:layout_below="@+id/linearLayout5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edittextstyle"
            android:gravity="left"
            android:inputType="textPersonName"
            android:text="@string/Comment"
            android:textAlignment="viewStart"
            android:textSize="22sp" />


    </LinearLayout>


</RelativeLayout>

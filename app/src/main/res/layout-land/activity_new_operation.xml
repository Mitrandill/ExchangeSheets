<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spreadsheet.exchangebook.NewOperation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/Operation"
                android:textSize="44sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.08">

            <TextView
                android:id="@+id/amountText"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/amountValue"
                android:layout_alignBottom="@+id/amountValue"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:width="100dp"
                android:elevation="0dp"
                android:text="Валюта"
                android:textSize="44sp" />

            <EditText

                android:id="@+id/amountValue"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/amountText"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:text="12345"
                android:textAlignment="viewEnd"
                android:textSize="44sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="434dp"
                android:layout_marginRight="434dp"
                android:width="50dp"
                android:contextClickable="true"
                android:minHeight="47dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:width="100dp"
                android:elevation="0dp"
                android:text="@string/UAH"
                android:textSize="44sp" />

            <EditText

                android:id="@+id/amountUAH"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:text="12345"
                android:textAlignment="viewEnd"
                android:textSize="44sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="430dp"
                android:layout_marginRight="430dp"
                android:width="50dp"
                android:contextClickable="true"
                android:gravity="right|start"
                android:minHeight="47dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.09">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/Comment"
                android:textSize="36sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="155dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/amountValue3"
                    android:layout_width="300dp"

                    android:layout_height="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_weight="0.10"
                    android:background="@drawable/edittextstyle"
                    android:text="44 1 ваш текс 1"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/Save"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.17"
                    android:text="@string/SAVE"
                    android:textSize="44sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.31">

            <TextView
                android:id="@+id/new_operation_sync_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_operation_sync_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="No Sync Yet"
                android:textSize="44sp" />

            <Button
                android:id="@+id/new_operation_sync_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="29dp"
                android:text="SYNC"
                android:textSize="44sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_operation_sync_text"
                android:layout_centerHorizontal="true"
                android:text="@string/Back"
                android:textSize="44sp" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

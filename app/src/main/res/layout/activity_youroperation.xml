<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spreadsheet.exchangebook.Youroperation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/youroperation_to_value_currency"
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:text="@string/currency"
            android:textSize="18sp" />

        <!--
           android:id="@+id/textView6"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="     Покупка"
           android:textSize="18sp" />
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/Date"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/youroperation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11.11.16"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/currency"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/youroperation_from_value"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:maxLength="9"
            android:text="1234578.6"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/youroperation_from_value_currency"
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:text="@string/currency"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/UAH"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/youroperation_to_UAH"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:maxLength="9"
            android:text="12345678.6"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="170dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/COURSE"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/youroperation_curse"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"

            android:text="12345.6"
            android:textSize="24sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/Comment1"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="240dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/youroperation_to_value_comment"
            android:layout_width="400dp"
            android:layout_height="365dp"
            android:layout_below="@+id/linearLayout5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="84dp"
            android:background="@drawable/edittextstyle"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:text="@string/Comment"
            android:textSize="22sp" />


    </LinearLayout>

    <Button
        android:id="@+id/youroperation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:text="@string/Back" />


</RelativeLayout>

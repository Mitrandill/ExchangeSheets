<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@android:drawable/picture_frame"
    android:backgroundTintMode="multiply"
    android:focusable="true"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/layout_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/layout_item_datecurency"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@+id/layout_item_datecurency"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/layout_item_tocurency"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/layout_item_toUAH"
            android:layout_toStartOf="@+id/layout_item_toUAH"
            android:text="$"
            android:textAlignment="viewEnd"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/layout_item_toUAH"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="100dp"
            android:text="100k"
            android:textAlignment="viewEnd"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/layout_item_fromcurrency"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/layout_item_datecurency"
            android:layout_toRightOf="@+id/layout_item_datecurency"
            android:text="$"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/layout_item_from"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="75dp"
            android:layout_toEndOf="@+id/layout_item_fromcurrency"
            android:layout_toRightOf="@+id/layout_item_fromcurrency"
            android:text="100k"
            android:textAlignment="viewEnd"
            android:textSize="14sp"
            android:textStyle="italic" />

    </RelativeLayout>
</RelativeLayout>
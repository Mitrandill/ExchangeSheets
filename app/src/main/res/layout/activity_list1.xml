<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spreadsheet.exchangebook.List1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Дата"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24sp" />

        <TextView
            android:text="11.11.16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Date 2 "
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/Time">

        <TextView
            android:text="Время"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="24sp"
            android:layout_gravity="left|right" />

        <TextView
            android:text="12:12:16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="24sp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="103dp"
        android:layout_alignBottom="@+id/linearLayout7">

        <TextView
            android:text="Сумма"
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:id="@+id/textView10"
            android:textSize="24sp" />

        <TextView
            android:text="12345.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Summ"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Сумма"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="24sp" />

        <TextView
            android:text="12345.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Summ2"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Покупка"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/Comm">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Commit2">

            <TextView
                android:text="Комментарии :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Commit2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:inputType="textPersonName"
                android:text="Все что вы хотели сказать но боялись "
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_marginTop="91dp"
                android:layout_below="@+id/linearLayout5"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
